@page "/estados"

@using Sistema_de_Gestion_de_Hospitales.FrontEnd.Interfaces
@using Sistema_de_Gestion_de_Hospitales.Shared
@using MudBlazor

@inject IEstadosService EstadosService
@inject NavigationManager NavigationManager
@inject IDialogService DialogService

<PageTitle>Estados</PageTitle>
<MudText Typo="Typo.h3" GutterBottom="true">Estados</MudText>

<MudContainer MaxWidth="MaxWidth.Large" Style="margin-top: 20px;">
    <MudPaper>
        @if (_isLoading)
        {
            <MudProgressLinear Color="Color.Primary" Indeterminate="true" />
        }
        else if (estados != null)
        {
            <MudGrid Container="true" Justify="Justify.SpaceBetween" Class="ml-2" Spacing="3">
                <MudItem xs="8">
                    <MudButton Class="mb-4" Variant="Variant.Filled" DropShadow="false" Color="Color.Primary" @onclick="AbrirFormularioInsercion">Agregar Nuevo Estado</MudButton>
                </MudItem>
            </MudGrid>
            <MudDataGrid Items="@estados" Hover="true" Dense="true" Filterable="true">
                <Columns>
                    <SelectColumn T="EstadoGetDTO" Hidden />
                    <PropertyColumn Property="x => x.IdEstado" Title="ID" />
                    <PropertyColumn Property="x => x.Nombre" Title="Nombre" />
                    <TemplateColumn>
                        <CellTemplate>
                            <MudStack Row>
                                <MudIconButton Icon="@Icons.Material.Filled.Edit" Variant="Variant.Filled" Color="Color.Secondary" Size="Size.Medium" @onclick="() => EditEstado(context.Item)"></MudIconButton>
                                <MudIconButton Icon="@Icons.Material.Filled.Delete" Variant="Variant.Filled" Color="Color.Error" Size="Size.Medium" @onclick="() => DeleteEstado(context.Item)"></MudIconButton>
                            </MudStack>
                        </CellTemplate>
                    </TemplateColumn>
                </Columns>
                <PagerContent>
                    <MudDataGridPager T="EstadoGetDTO" PageSizeOptions="[5,10,15]" />
                </PagerContent>
                <NoRecordsContent>
                    No se encontro ningún resultado.
                </NoRecordsContent>
            </MudDataGrid>
            <style>
                .dialog-show {
                    backdrop-filter: blur(10px);
                }
            </style>
        }
        else
        {
            <MudText Typo="Typo.subtitle1" Align="Align.Center">Ha ocurrido un error al procesar la consulta.</MudText>
        }
    </MudPaper>
</MudContainer>

@code {
    private IEnumerable<EstadoGetDTO>? estados  = null;
    private bool _isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        await CargarEstados();
    }

    private async Task CargarEstados()
    {
        try
        {
            estados  = await EstadosService.GetEstados();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error al cargar los estados: {ex.Message}");
        }
        finally
        {
            _isLoading = false;
            await InvokeAsync(StateHasChanged); 
        }
    }

    private async Task AbrirFormularioInsercion()
    {   
        var parameters = new DialogParameters { { "Model", new EstadoInsertDTO() } };
        var options = new DialogOptions { CloseButton = true, MaxWidth = MaxWidth.Small, FullWidth = true, BackgroundClass = "dialog-show" };
        parameters.Add("OnClose", EventCallback.Factory.Create(this, OnDialogClose));

        var result = await DialogService.ShowAsync<InsertEstado>("Nuevo Estado", parameters, options);
        if (await result.Result == DialogResult.Ok(true))
        {
            OnDialogClose();
        }
    }

    private async Task EditEstado(EstadoGetDTO estado)
    {
        var parameters = new DialogParameters { { "Model", estado } };
        var options = new DialogOptions { CloseButton = true, MaxWidth = MaxWidth.Small, FullWidth = true, BackgroundClass = "dialog-show" };
        parameters.Add("OnClose", EventCallback.Factory.Create(this, OnDialogClose));

        var dialog = await DialogService.ShowAsync<UpdateEstado>("Actualizar Estado", parameters, options);
        var result = dialog.Result;

        if (!result.IsCanceled)
        {
           OnDialogClose();
        }
    }

    private async Task DeleteEstado(EstadoGetDTO estado)
    {
        bool? confirmed = await DialogService.ShowMessageBox(
            "Confirmar",
            $"¿Estás seguro de que deseas eliminar el estado {estado.Nombre}?",
            yesText: "Eliminar", cancelText: "Cancelar");

        if (confirmed == true)
        {
            var success = await EstadosService.DeleteEstado(estado.IdEstado);
            if (success)
            {
                OnDialogClose();
            }
            else
            {
                await DialogService.ShowMessageBox("Error", "No se pudo eliminar la estado.");
            }
        }
    }

    private async void OnDialogClose()
    {
        await CargarEstados();
    }
}
