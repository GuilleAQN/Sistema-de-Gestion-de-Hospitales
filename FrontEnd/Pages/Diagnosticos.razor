@page "/diagnosticos"

@using Sistema_de_Gestion_de_Hospitales.FrontEnd.Interfaces
@using Sistema_de_Gestion_de_Hospitales.Shared
@using MudBlazor

@inject IDiagnosticosService DiagnosticosService
@inject NavigationManager NavigationManager
@inject IDialogService DialogService

<PageTitle>Diagnosticos</PageTitle>
<MudText Typo="Typo.h3" GutterBottom="true">Diagnosticos</MudText>

<MudContainer MaxWidth="MaxWidth.Large" Style="margin-top: 20px;">
    <MudPaper>
        @if (_isLoading)
        {
            <MudProgressLinear Color="Color.Primary" Indeterminate="true" />
        }
        else if (diagnosticos != null)
        {
            <MudGrid Container="true" Justify="Justify.SpaceBetween" Class="ml-2" Spacing="3">
                <MudItem xs="8">
                    <MudButton Class="mb-4" Variant="Variant.Filled" DropShadow="false" Color="Color.Primary" @onclick="AbrirFormularioInsercion">Agregar Nuevo Diagnostico</MudButton>
                </MudItem>
            </MudGrid>
            <MudDataGrid Items="@diagnosticos" Hover="true" Dense="true" Filterable="true">
                <Columns>
                    <HierarchyColumn T="DiagnosticoGetDTO" />
                    <PropertyColumn Property="x => x.IdDiagnostico" Title="ID" />
                    <PropertyColumn Property="x => x.NombrePaciente" Title="Paciente" />
                    <PropertyColumn Property="x => x.NombreDoctor" Title="Doctor" />
                    <PropertyColumn Property="x => x.Fecha" Title="Fecha" />
                    <TemplateColumn>
                        <CellTemplate>
                            <MudStack Row>
                                <MudIconButton Icon="@Icons.Material.Filled.Edit" Variant="Variant.Filled" Color="Color.Secondary" Size="Size.Medium" @onclick="() => EditDiagnostico(context.Item)"></MudIconButton>
                                <MudIconButton Icon="@Icons.Material.Filled.Delete" Variant="Variant.Filled" Color="Color.Error" Size="Size.Medium" @onclick="() => DeleteDiagnostico(context.Item)"></MudIconButton>
                            </MudStack>
                        </CellTemplate>
                    </TemplateColumn>
                </Columns>
                <ChildRowContent>
                    <MudCard>
                        <MudCardHeader>
                            <CardHeaderContent>
                                <MudText Typo="Typo.h6">@context.Item.IdDiagnostico</MudText>
                            </CardHeaderContent>
                        </MudCardHeader>
                        <MudCardContent>
                            <MudText>Fecha: @context.Item.Fecha.ToShortDateString()</MudText>
                            <MudText>Paciente: @context.Item.NombrePaciente</MudText>
                            <MudText>Doctor: @context.Item.NombreDoctor</MudText>
                            <MudText>Descripción: @context.Item.Descripcion</MudText>
                        </MudCardContent>
                    </MudCard>
                </ChildRowContent>
                <PagerContent>
                    <MudDataGridPager T="DiagnosticoGetDTO" PageSizeOptions="[5,10,15]" />
                </PagerContent>
                <NoRecordsContent>
                    No se encontro ningún resultado.
                </NoRecordsContent>
            </MudDataGrid>
            <style>
                .dialog-show {
                    backdrop-filter: blur(10px);
                }
            </style>
        }
        else
        {
            <MudText Typo="Typo.subtitle1" Align="Align.Center">Ha ocurrido un error al procesar la consulta.</MudText>
        }
    </MudPaper>
</MudContainer>

@code {
    private IEnumerable<DiagnosticoGetDTO>? diagnosticos = null;
    private bool _isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        await CargarDiagnosticos();
    }

    private async Task CargarDiagnosticos()
    {
        try
        {
            diagnosticos = await DiagnosticosService.GetDiagnosticos();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error al cargar los diagnosticos: {ex.Message}");
        }
        finally
        {
            _isLoading = false;
            await InvokeAsync(StateHasChanged); 
        }
    }

    private async Task AbrirFormularioInsercion()
    {   
        var parameters = new DialogParameters { { "Model", new DiagnosticoInsertDTO() } };
        var options = new DialogOptions { CloseButton = true, MaxWidth = MaxWidth.Small, FullWidth = true, BackgroundClass = "dialog-show" };
        parameters.Add("OnClose", EventCallback.Factory.Create(this, OnDialogClose));

        var result = await DialogService.ShowAsync<InsertDiagnostico>("Nueva Diagnostico", parameters, options);
        if (await result.Result == DialogResult.Ok(true))
        {
            OnDialogClose();
        }
    }

    private async Task EditDiagnostico(DiagnosticoGetDTO diagnostico)
    {
        var parameters = new DialogParameters { { "Model", diagnostico } };
        var options = new DialogOptions { CloseButton = true, MaxWidth = MaxWidth.Small, FullWidth = true, BackgroundClass = "dialog-show" };
        parameters.Add("OnClose", EventCallback.Factory.Create(this, OnDialogClose));

        var dialog = await DialogService.ShowAsync<UpdateDiagnostico>("Actualizar Diagnostico", parameters, options);
        var result = dialog.Result;

        if (!result.IsCanceled)
        {
            OnDialogClose();
        }
    }

    private async Task DeleteDiagnostico(DiagnosticoGetDTO diagnostico)
    {
        bool? confirmed = await DialogService.ShowMessageBox(
            "Confirmar",
            $"¿Estás seguro de que deseas eliminar el diagnostico de ID {diagnostico.IdDiagnostico}?",
            yesText: "Eliminar", cancelText: "Cancelar");

        if (confirmed == true)
        {
            var success = await DiagnosticosService.DeleteDiagnostico(diagnostico.IdDiagnostico);
            if (success)
            {
                OnDialogClose();
            }
            else
            {
                await DialogService.ShowMessageBox("Error", "No se pudo eliminar el diagnostico.");
            }
        }
    }

    private async void OnDialogClose()
    {
        await CargarDiagnosticos();
    }
}
