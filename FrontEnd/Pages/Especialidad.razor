@page "/especialidades"

@using Sistema_de_Gestion_de_Hospitales.FrontEnd.Interfaces
@using Sistema_de_Gestion_de_Hospitales.Shared
@using MudBlazor

@inject IEspecialidadesService EspecialidadesService
@inject NavigationManager NavigationManager
@inject IDialogService DialogService

<PageTitle>Especialidades</PageTitle>
<MudText Typo="Typo.h6" GutterBottom="true">Especialidades</MudText>

<MudContainer MaxWidth="MaxWidth.Large" Style="margin-top: 20px;">
    <MudPaper>
        @if (_isLoading)
        {
            <MudProgressLinear Color="Color.Primary" Indeterminate="true" />
        }
        else if (especialidad != null && especialidad.Any())
        {
            <MudGrid Container="true" Justify="Justify.SpaceBetween" Class="ml-2" Spacing="3">
                <MudItem xs="8">
                    <MudButton Class="mb-4" Variant="Variant.Filled" DropShadow="false" Color="Color.Primary" @onclick="AbrirFormularioInsercion">Agregar Nuevo Especialidad</MudButton>
                </MudItem>
            </MudGrid>
            <MudDataGrid T="EspecialidadGetDTO" MultiSelection="true" Items="@especialidad" Hover="true" Dense="true" Filterable="true" Sortable="true">
                <Columns>
                    <SelectColumn T="EspecialidadGetDTO" Hidden />
                    <PropertyColumn Property="x => x.IdEspecialidad" Title="ID" />
                    <PropertyColumn Property="x => x.Nombre" Title="Nombre" />
                    <PropertyColumn Property="x => x.Descripcion" Title="Descripcion" />
                    <TemplateColumn>
                        <CellTemplate>
                            <MudStack Row>
                                <MudIconButton Icon="@Icons.Material.Filled.Edit" Variant="Variant.Filled" Color="Color.Secondary" Size="Size.Medium" @onclick="() => EditEspecialidad(context.Item)"></MudIconButton>
                                <MudIconButton Icon="@Icons.Material.Filled.Delete" Variant="Variant.Filled" Color="Color.Error" Size="Size.Medium" @onclick="() => DeleteEspecialidad(context.Item)"></MudIconButton>
                            </MudStack>
                        </CellTemplate>
                    </TemplateColumn>
                </Columns>
                <PagerContent>
                    <MudDataGridPager T="EspecialidadGetDTO" PageSizeOptions="[5,10,15]" />
                </PagerContent>
            </MudDataGrid>
            <style>
                .dialog-show {
                    backdrop-filter: blur(10px);
                }
            </style>
        }
        else
        {
            <MudGrid Container="true" Justify="Justify.SpaceBetween" AlignItems="AlignItems.Center" Spacing="2">
                <MudItem>
                    <MudText Typo="Typo.subtitle1" Align="Align.Center">No se encontro ningún resultado.</MudText>
                    <MudButton Class="mb-4" Variant="Variant.Filled" DropShadow="false" Color="Color.Primary" @onclick="AbrirFormularioInsercion">Agregar Nuevo Especialidad</MudButton>
                </MudItem>
            </MudGrid>
        }
    </MudPaper>
</MudContainer>

@code {
    private IEnumerable<EspecialidadGetDTO>? especialidad = null;
    private bool _isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        await CargarEspecialidades();
    }

    private async Task CargarEspecialidades()
    {
        try
        {
            especialidad = await EspecialidadesService.GetEspecialidades();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error al cargar las especialidaes: {ex.Message}");
        }
        finally
        {
            _isLoading = false;
            await InvokeAsync(StateHasChanged); 
        }
    }

    private async Task AbrirFormularioInsercion()
    {   
        var parameters = new DialogParameters { { "Model", new EspecialidadInsertDTO() } };
        var options = new DialogOptions { CloseButton = true, MaxWidth = MaxWidth.Small, FullWidth = true, BackgroundClass = "dialog-show" };
        parameters.Add("OnClose", EventCallback.Factory.Create(this, OnDialogClose));

        var result = await DialogService.ShowAsync<InsertEspecialidad>("Nuevo Especialidad", parameters, options);
        if (await result.Result == DialogResult.Ok(true))
        {
            OnDialogClose();
        }
    }

    private async Task EditEspecialidad(EspecialidadGetDTO especialidad)
    {
        var parameters = new DialogParameters { { "Model", especialidad } };
        var options = new DialogOptions { CloseButton = true, MaxWidth = MaxWidth.Small, FullWidth = true, BackgroundClass = "dialog-show" };
        parameters.Add("OnClose", EventCallback.Factory.Create(this, OnDialogClose));

        var dialog = await DialogService.ShowAsync<UpdateEspecialidad>("Actualizar Especialidad", parameters, options);
        var result = dialog.Result;

        if (!result.IsCanceled)
        {
            OnDialogClose();
        }
    }

    private async Task DeleteEspecialidad(EspecialidadGetDTO especialidad)
    {
        bool? confirmed = await DialogService.ShowMessageBox(
            "Confirmar",
            $"¿Estás seguro de que deseas eliminar la especialidad {especialidad.Nombre}?",
            yesText: "Eliminar", cancelText: "Cancelar");

        if (confirmed == true)
        {
            var success = await EspecialidadesService.DeleteEspecialidad(especialidad.IdEspecialidad);
            if (success)
            {
                OnDialogClose();
            }
            else
            {
                await DialogService.ShowMessageBox("Error", "No se pudo eliminar la especialidad.");
            }
        }
    }

    private async void OnDialogClose()
    {
        await CargarEspecialidades();
    }
}
